# NLP Client Configuration
NLP_PROVIDER=huggingface  # ou 'replicate'

# API Keys
# Padrão recomendado pela biblioteca huggingface-hub. Cole seu token aqui.
HF_TOKEN="Seu_token"
REPLICATE_API_KEY="Seu_token"

# Jarvis Configuration
SAFE_MODE=True

# Text-to-Speech (TTS) Engine
# Escolha entre 'pyttsx3' (padrão, usa vozes do sistema) ou 'espeak-ng' (voz robótica offline).
TTS_ENGINE=espeak-ng
