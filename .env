# NLP Client Configuration
NLP_PROVIDER=huggingface  # ou 'replicate'

# API Keys
# Padrão recomendado pela biblioteca huggingface-hub. Cole seu token aqui.
HF_TOKEN="" # Seu token aqui
REPLICATE_API_KEY="" # Replique seu token aqui

# Jarvis Configuration
SAFE_MODE=True

# Text-to-Speech (TTS) Engine
# Escolha entre 'pyttsx3' (padrão, usa vozes do sistema) ou 'espeak-ng' (voz robótica offline).
TTS_ENGINE=pyttsx3

# Audio Input Configuration (Opcional, para Linux)
# Se o microfone não funcionar no Linux, use o script 'check_mics.py' para encontrar o índice
# do seu microfone e defina-o aqui. Deixe em branco para usar o padrão.
MIC_INDEX=0